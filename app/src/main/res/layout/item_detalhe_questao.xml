<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header da questão -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/txtNumeroQuestao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Questão 1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ CORRETO"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Disciplina -->
        <TextView
            android:id="@+id/txtDisciplina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matemática"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:alpha="0.7"
            android:layout_marginBottom="8dp"
            android:background="@drawable/discipline_tag"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp" />

        <!-- Respostas -->
        <TextView
            android:id="@+id/txtRespostaUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sua resposta: A"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txtRespostaCorreta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resposta correta: A"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>