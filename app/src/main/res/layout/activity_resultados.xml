<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Resultados">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="MissingConstraints">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ¯ Resultado do Simulado"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtAno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENEM 2023"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:alpha="0.7" />

        </LinearLayout>

        <!-- Progress Bar para salvamento -->
        <ProgressBar
            android:id="@+id/progressBarSalvando"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Card Principal de Resultados -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Status -->
                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Excelente!"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- EstatÃ­sticas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <!-- Acertos -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtAcertos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@color/green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Acertos"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:alpha="0.7" />

                    </LinearLayout>

                    <!-- Separador -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="@color/gray"
                        android:alpha="0.3" />

                    <!-- Total -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@color/blue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:alpha="0.7" />

                    </LinearLayout>

                    <!-- Separador -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="@color/gray"
                        android:alpha="0.3" />

                    <!-- Percentual -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtPercentual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="90%"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aproveitamento"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:alpha="0.7" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Tempo (opcional) -->
                <TextView
                    android:id="@+id/txtTempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tempo: --:--"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:alpha="0.7"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- AnÃ¡lise por Disciplina (Card) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š AnÃ¡lise por Disciplina"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toque em 'Ver Detalhes' para anÃ¡lise completa"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:alpha="0.7" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- BotÃµes de AÃ§Ã£o -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnVerDetalhes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Ver Detalhes"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnNovoSimulado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŽ¯ Novo Simulado"
                android:textSize="16sp"
                android:background="@drawable/button_secondary"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnVoltar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ  Voltar ao Menu"
                android:textSize="16sp"
                android:background="@drawable/button_outline"
                android:textColor="@color/black"
                android:padding="12dp" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>